{
    "compilerOptions": {
      "target": "ES6",
      "module": "ESNext",
      "jsx": "react-jsx",
      "strict": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true
    },
    "exclude": [
      "node_modules",
      "build",
      "**/__tests__/*",
      "jest.setup.tsx",
      "dev",
      "types",
      "dev/examples.framer",
      "test",
      "skins",
      "dist",
      "temp",
      "api",
      "cypress"
    ]
  }
  